<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagos</title>
    <link rel="stylesheet" href="style.css">
    <link rel="shortcut icon" href="coche-electrico.ico" type="image/x-icon" />
    <style>
        h1, .tarjeta {
            font-family: Arial, sans-serif;
            color: #ffffff;
            background-color: #2a09ff;
            margin: auto;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("https://cdn.pixabay.com/photo/2016/07/15/21/07/credit-card-1520400_960_720.jpg");
            background-size: cover;
            background-position: center;
        }

        .form-container {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
            width: 300px;
            padding: 30px;
            border: 1px solid #000;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            display: block;
            margin: 20px auto 0;
            padding: 10px 20px;
            background-color: #1e00ff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #0077cc;
        }

        @media (max-width: 480px) {
            .form-container {
                width: 100%;
            }
        }
        
    </style>
</head>

<body>
    
    <div class="background"></div>
    <div class="form-container">
        <form action="/pagarPost" method="post">
            <h1 class="pa">Seleciones metodo de pago</h1>

    <br>
    <select class="se" name="pago" id="pago" onchange="mostrarFinanciacion()">
        <option value="contado">contado</option>
        <option value="financiado">financiado</option>
    </select>
    <br>
<label class="pa"for="cuota">selecione el tipo de cuota que desea abonar</label>
<select name="cuota" id="cuota">
    
</select>
            <h1 style="text-align: center;">PAGOS</h1>
            <p></p>
            <div class="mb-3">
                <label>Titular de la Tarjeta</label>
                <input type="text" name="" class="form-control" placeholder="Nombre del titular">
            </div>

            <div class="mb-3">
                <label>Número de Tarjeta</label>
                <input type="number" name="" class="form-control" placeholder="xxx xxx xxx xxx">
            </div>

            <div class="mb-3">
                <label>Vencimiento</label>
                <input type="text" name="" class="form-control"  placeholder="MM/A">
            </div>
            <input type="hidden" value="<%= auto %>" name="auto"> 

            <input type="submit" value="Pagar">
        </form>


        <div>
            <a class="btn btn-sm btn-outline-danger border-0" href="/getFacturaAlquiler">
                <i class="fa fa-file-pdf"></i>
                Generar Pdf
            </a>
        </div>
    </div>
    <script>
        function mostrarFinanciacion() {
          var tipoPago= document.getElementById("pago");
          var tipoCuota = document.getElementById("cuota");
          var pagoSelecionado = tipoPago.value;
      
          
          tipoCuota.innerHTML = "";
      
          // Generar las opciones correspondientes de cuotasssssshhhhhhh
          if (pagoSelecionado === "financiado") {
            agregarOption(tipoCuota, "uno", "3 cuotas de 14.000 USD");
            agregarOption(tipoCuota, "dos", "6 cuotas de 10.000 USD");
            agregarOption(tipoCuota, "tres", "12 cuotas de 4.000 USD");
           
          }
          
      
          // Función auxiliar para agregar opciones al select de cuotas
          function agregarOption(select, value, text) {
            var option = document.createElement("option");
            option.value = value;
            option.text = text;
            select.appendChild(option);
          }
        }
      </script>
</body>

</html>